html
  head
    style.
     form {
     margin: 0 auto;
     width: 600px;
     }
     
     input[type=text], select, textarea {
     width: 100%;
     padding: 10px;
     border: 1px solid #ccc;
     border-radius: 2px;
     resize: vertical;
     }
     
     #submit { 
      margin: 0 auto;
      width: 30%;
      border-radius: 10px;
      border: none;
      padding: 10px 20px;
      color: aliceblue;
      background-color: #d6a844;
      margin-left:auto;
      margin-right:auto;
      display:block;
      }
    div.editemployee
        form(method="post" action ="/employee/:id/edit")
          input(name="_id", type="hidden", value=employee._id.toHexString())
          div
                div
                    span.label Name :
                    input(type="text", name="name", id="editEmployeeName", value=employee.name)
                br
                div#editEmployeeSubmit
                    input(id="submit", type="submit", value="Update")
                a(href="/info")!= "Back to Employee List"
